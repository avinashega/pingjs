{{!< default}} {{#contentFor "title"}}Pings{{/contentFor}}
<h2>Manage your Pings</h2>
<div class="row">
	<div class="col-md-12 b-siteList" role="b-siteList"
		onclick="return {url: '/manageSites/list', removeUrl: '/sites/remove', editSiteUrl: '/sites/edit'};">
		<div class="alert alert-danger help-block b-siteList__errorMessage"></div>
        <div class="alert alert-success help-block b-siteList__successMessage"><strong>Success!</strong></div>
		<div class="text-info">List of Ping(s):</div>
		<div class="b-siteList__list"></div>
		<div class="modal fade b-siteList__popup">
        	<input type="hidden" name="id" class="b-siteList__modalId" />
        	<div class="modal-dialog">
            	<div class="modal-content">
                	<div class="modal-header">
                    	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    	<h4 class="modal-title">Edit your Ping</h4>
                	</div>
                	<div class="modal-body" style="overflow:auto;">
						<div class="form-group col-md-4">
	        				<label class="control-label">Protocol</label>
					        <div class="bfh-selectbox b-siteList__protocol" data-name="protocol" id="protocol" data-value="">
					            <div data-value="http">HTTP</div>
					            <div data-value="https">HTTPS</div>
					        </div>
	        			</div>
				        <div class="form-group col-md-8">
				            <label class="control-label">URL</label>
				            <input type="text" name="url" required placeholder="www.example.com" class="form-control b-siteList__url">
				        </div>
						<div class="form-group col-md-6">
				            <label class="control-label">Port</label>
				            <input type="text" name="port" placeholder="optional(example:8080)" class="form-control b-siteList__port">
				        </div>
				        <div class="form-group col-md-6">
				            <label class="control-label">Site Path</label>
				            <input type="text" name="path" class="form-control b-siteList__path" placeholder="optional(example: home, index)">
				        </div>
				        <!--<div class="form-group col-md-6">
				        <label class="control-label">Method</label>
				        <div class="bfh-selectbox" data-name="method" id="method" data-value="GET">
				            <div data-value="GET">GET</div>
				            <div data-value="POST">POST</div>
				        </div>
				        </div>-->
				        <div class="form-group col-md-6">
				            <label class="control-label">Frequency(in minutes)</label>
				            <input type="text" name="frequency" required value="" class="form-control b-siteList__frequency">
				        </div>
				        <div class="form-group col-md-6">
				            <label class="control-label">Response Threshold</label>
				            <input type="text" name="responsiveness" optional placeholder="optional(example: 200)" class="form-control b-siteList__responsiveness">
				        </div>
                	</div>
                	<div class="modal-footer">
                    	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    	<button type="button" class="btn btn-primary b-siteList__modalSubmit" date-loading="Saving changes...">Save changes</button>
                	</div>
            	</div><!-- /.modal-content -->
        	</div><!-- /.modal-dialog -->
    	</div><!-- /.modal -->

		<div class="b-siteList__addBlock">
			<button type="button"
				class="btn btn-success b-siteList__addButton">Create
				Ping</button>

			<form class="b-siteList__addForm col-md-6" action="/sites/add"
				method="post" role="b-ajaxForm" autocomplete="off">
				<h4>Create Ping</h4>
				<div class="form-group col-md-4">
	        <label class="control-label">Protocol</label>
	        <div class="bfh-selectbox" data-name="protocol" id="protocol" data-value="http">
	            <div data-value="http">HTTP</div>
	            <div data-value="https">HTTPS</div>
	        </div>
	        </div>
	        <div class="form-group col-md-8">
	            <label class="control-label">URL</label>
	            <input type="text" name="url" required placeholder="www.example.com" class="form-control">
	        </div>
			<div class="form-group col-md-6">
	            <label class="control-label">Port</label>
	            <input type="text" name="port" placeholder="optional(example:8080)" class="form-control">
	        </div>
	        <!--<div class="form-group col-md-6">
	            <label class="control-label">Site Path</label>
	            <input type="text" name="path" class="form-control" placeholder="optional(example: home, index)">
	        </div>
	        <div class="form-group col-md-6">
	        <label class="control-label">Method</label>
	        <div class="bfh-selectbox" data-name="method" id="method" data-value="GET">
	            <div data-value="GET">GET</div>
	            <div data-value="POST">POST</div>
	        </div>
	        </div>-->
	        <div class="form-group col-md-6">
	            <label class="control-label">Frequency(in minutes)</label>
	            <input type="text" name="frequency" required value="5" class="form-control">
	        </div>
	        <div class="form-group col-md-12">
	            <label class="control-label">Response Threshold(in milli seconds)</label>
	            <input type="text" name="responsiveness" optional placeholder="optional(example: 200)" class="form-control">
	        </div>
	        <div class="form-group col-md-12">
	        <p class="small">Note: Get notified when your website's response time goes beyond the threshold. Leave it blank if you wish to not get notified.</p>
	    	</div>
	    	<button type="submit" class="btn btn-lg btn-success btn-block b-ajaxForm__submitButton" autocomplete="off" onclick="mixpanel.track('check');">Create</button>
	    	<label class="help-block text-danger b-ajaxForm__errorMessage"></label>
	    	<label class="help-block text-success b-ajaxForm__successMessage"></label>

			</form>
		</div>
	</div>
</div>
