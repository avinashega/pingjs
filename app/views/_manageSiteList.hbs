<div class="list-group">
    {{#unless sites.length}}
        <div class="alert alert-warning">You don't have any Pings yet. Add one now using the button below.</div>
    {{/unless}}
    {{#if sites.length}}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>Url</th>
            <th>Frequency</th>
            <th>Status</th>
            <th>Last Pinged At</th>
            <th>Total Pings</th>
            <th>Average<br> Response<br> Time</th>
            <th>Remove</th>
        </tr>
        </thead>
        <tbody>

        {{#each sites}}
            <tr class="b-siteList__item" data-id="{{_id}}" data-protocol="{{protocol}}" data-url="{{url}}" data-port="{{port}}" data-path="{{path}}" data-frequency="{{frequency}}" data-responsiveness="{{responsiveness}}">
            <td>
                {{protocol}}://{{url}}{{#if port}}:{{port}}{{/if}}{{#if path}}/{{path}}{{/if}}
            </td>
            <td>
                {{frequency}} minutes
            </td>
            <td>
                {{last_status}}
            </td>
            <td>
                {{formatDate last_status_change short}}
            </td>
            <td>{{pingCount}}</td>
            <td>{{averageResponseTime}} ms</td>
            <td>
            <button class="btn btn-sm btn-danger b-siteList__editButton" type="button" onclick="mixpanel.track('editCheck');">Edit</button>
            <button class="btn btn-sm btn-default b-siteList__removeButton" type="button" onclick="mixpanel.track('deleteCheck');">Remove</button>
            </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{/if}}
</div>